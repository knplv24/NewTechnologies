<Window x:Class="NewTechnologies.RequestEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование заявки" Height="618" Width="626" FontFamily="Bahnschrift Light SemiCondensed" FontSize="14">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFBBDCFA"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <Label Content="Тип партнера"/>
                <ComboBox x:Name="PartnerTypeCombo"/>

                <Label Content="Наименование"/>
                <TextBox x:Name="PartnerNameBox"/>

                <Label Content="ФИО директора"/>
                <TextBox x:Name="DirectorBox"/>

                <Label Content="Адрес"/>
                <TextBox x:Name="AddressBox"/>

                <Label Content="Рейтинг"/>
                <TextBox x:Name="RatingBox"/>

                <Label Content="Телефон"/>
                <TextBox x:Name="PhoneBox"/>

                <Label Content="Email"/>
                <TextBox x:Name="EmailBox"/>

                <Label Content="Продукты" Margin="0,10,0,0"/>
                <DataGrid x:Name="ProductsGrid" AutoGenerateColumns="False" Margin="0,10,0,0" BorderBrush="#FF0C4882" Background="#FF0C4882" Foreground="#FF0C4882">
                    <DataGrid.Columns>

                        <!-- Галочка выбора -->
                        <DataGridCheckBoxColumn Header="✓" Binding="{Binding IsSelected}" Width="40"/>

                        <!-- Название продукта -->
                        <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>

                        <!-- Количество -->
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="Save_Click" Width="80" Margin="5,0" Background="White" BorderBrush="#FF0C4882" Foreground="#FF0C4882" FontWeight="Bold"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="80" Margin="5,0" Background="White" BorderBrush="#FF0C4882" Foreground="#FF0C4882" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
